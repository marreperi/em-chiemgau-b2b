{% schema %}
{
  "name": "Promotion Cards",
  "max_blocks": 12,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Promotion cards"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Unterüberschrift",
      "default": "Share your best offers"
    },
    {
      "type": "select",
      "id": "section_heading_layout",
      "label": "Überschriften-Ausrichtung",
      "options": [
        { "value": "section-heading--left", "label": "Links" },
        { "value": "section-heading--center", "label": "Zentriert" }
      ],
      "default": "section-heading--left"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Spalten-Layout",
      "options": [
        { "value": "grid-2 grid-lap-1", "label": "2 Spalten" },
        { "value": "grid-3 grid-lap-1", "label": "3 Spalten" },
        { "value": "grid-4 grid-portable-2 grid-lap-1", "label": "4 Spalten" }
      ],
      "default": "grid-3 grid-lap-1"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Promotion-Karte",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Bild" },
        { "type": "text", "id": "caption", "label": "Untertitel", "default": "Introducing" },
        { "type": "text", "id": "title", "label": "Titel", "default": "Your best promotion yet" },
        { "type": "text", "id": "subtitle", "label": "Beschreibung", "default": "Write about it" },
        { "type": "url", "id": "link", "label": "Link" },
        { "type": "text", "id": "button_label", "label": "Button-Text", "default": "Mehr erfahren" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promotion Cards",
      "blocks": [
        { "type": "card" },
        { "type": "card" },
        { "type": "card" }
      ]
    }
  ]
}
{% endschema %}
